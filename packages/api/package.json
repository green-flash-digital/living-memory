{
  "name": "@living-memories/api",
  "private": true,
  "type": "module",
  "exports": {
    "./client/browser": "./dist.client/client.browser.js",
    "./client/server": "./dist.client/client.server.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "yarn build:api & yarn build:client",
    "build:api": "vite build",
    "build:client": "yarn tsx scripts/generate-client-types.ts && yarn tsc --project ./tsconfig.build.client.json",
    "deploy": "yarn run build:api && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "better-auth": "^1.4.12",
    "hono": "^4.11.4",
    "prisma": "^7.2.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.12",
    "@cloudflare/vite-plugin": "^1.2.3",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "wrangler": "^4.17.0"
  }
}
